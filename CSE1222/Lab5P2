#include <iostream>
using namespace std;

int main()
{
	int userNum; //number defined by user
	int i(0); //iterator
	
	cout << "Enter number of rows: ";
	cin >> userNum;
	cout << endl;

	while (i < userNum) {
		int j(1); //inner iterator		  
		while (j <= userNum - i) {
			cout << j % 10;
			j++;
		}
		cout << endl;
		i ++;
	}
}

//thank goodnedd c++ can declare variable out of the top of `main()`
